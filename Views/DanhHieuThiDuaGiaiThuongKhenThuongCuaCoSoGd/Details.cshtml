    </div>
    <div class="row mb-3">
        <label asp-for="IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGdNavigation" class="col-sm-5 col-form-label"><b>@Html.DisplayNameFor(model => model.IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGdNavigation)</b></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGdNavigation.IdThiDuaGiaiThuongKhenThuong)" readonly>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="IdLoaiDanhHieuThiDuaGiaiThuongKhenThuongNavigation" class="col-sm-5 col-form-label"><b>@Html.DisplayNameFor(model => model.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuongNavigation)</b></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuongNavigation.IdLoaiDanhHieuThiDuaGiaiThuongKhenThuong)" readonly>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="IdPhuongThucKhenThuongNavigation" class="col-sm-5 col-form-label"><b>@Html.DisplayNameFor(model => model.IdPhuongThucKhenThuongNavigation)</b></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdPhuongThucKhenThuongNavigation.IdPhuongThucKhenThuong)" readonly>
        </div>
    </div>
    <div class="combo-button cen">
        <a asp-action="Edit" asp-route-id="@Model?.IdDanhHieuThiDuaGiaiThuongKhenThuongCuaCoSoGd" class="custom-btn ">CHỈNH SỬA THÔNG TIN</a>
        <a asp-action="Index" class="btn btn-back"><i class="fa-solid fa-circle-arrow-left"></i>QUAY LẠI DANH SÁCH</a>
    </div>
</div>

