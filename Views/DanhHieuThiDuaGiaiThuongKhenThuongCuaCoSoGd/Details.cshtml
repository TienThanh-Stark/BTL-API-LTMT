    <div class="row mb-3">
        <label asp-for="IdCapKhenThuongNavigation" class="col-sm-5 col-form-label"><b>@Html.DisplayNameFor(model => model.IdCapKhenThuongNavigation)</b></label>
        <div class="col-sm-7">
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.IdCapKhenThuongNavigation.IdCapKhenThuong)" readonly>
